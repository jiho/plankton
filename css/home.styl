body > .stack > .home
  > .project
    width: 33%

    .status
      margin-top: 100px

      .icon
        display: inline-block
        margin-right: 25px
        text-align: center

    .start
      margin 30px 0

      a
        @extends #flat-button

  > .navigation
    margin: 50px 0
    overflow: hidden
    position: relative
    z-index: 1

    .item
      box-sizing: border-box
      float: left
      padding-right: 20px
      width: 33.3%

      a
        background: linear-gradient(top, rgba(#000, 0.5), rgba(#000, 0))
        border-top: 5px solid red
        color: #fff
        display: block
        font-size: 30px
        padding: 30px
        text-align: center
        text-decoration: none
