html
  background: $dark-gray
  border-bottom: 10px solid black
  border-top: 5px solid #000
  box-sizing: border-box
  color: #f3f3f3
  font: 300 14px $sans-serif
  min-height: 100%
  transition: background-color 1s ease-in-out

body
  margin: 0

  > .stack
    margin: 0 auto
    position: relative
    width: 1024px
    z-index: 1

    > *
      padding: 50px 25px

    h1
      color: $light-gray
      font: 24px $serif
      text-shadow: 0 1px 1px #000

a
  color: $lime
  text-decoration: none

.zooniverse-footer
  box-shadow: 0 1px 1px -1px #808080 inset
  max-width: 1000px
  margin: 0 auto
  padding: 30px 10px 50px

  .zooniverse-logo-container
    float: none
    overflow: hidden

    .zooniverse-logo
      margin: 0
      max-height: 100px
      width: 100%
      height: 100%

  .zooniverse-footer-content
    width: 100%

    .zooniverse-footer-heading
      margin: 30px auto
      text-align: center
      max-width: 800px

.spine.stack > *
  display: none

  &.active,
  > nav,
  > hr
    display: block

  > nav
    a,
    button
      border-radius: 2em
      color: inherit
      display: inline-block
      font-size: 12px
      font-weight: bold
      padding: 3px 15px

      &.active
        background: rgba(#000, 0.25)
        box-shadow:
          0 1px 1px rgba(#000, 0.5) inset,
          0 1px 0 rgba(#fff, 0.1)
        text-shadow: 0 1px 0 #000
