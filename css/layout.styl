html
  background: $dark-gray
  border-bottom: 10px solid black
  border-top: 5px solid #000
  box-sizing: border-box
  color: #f3f3f3
  font: 14px $sans-serif
  min-height: 100%
  transition: background-color 1s ease-in-out

body
  margin: 0

  > .stack
    margin: 0 auto
    position: relative
    width: 1024px
    z-index: 1

    > *
      padding: 50px 25px

    h1
      color: $light-gray
      font: 24px $serif
      text-shadow: 0 1px 1px #000

hr
  border: 0
  border-bottom: 1px solid rgba(#fff, 0.1)
  border-top: 1px solid rgba(#000, 0.5)
  margin: 30px 0

a
  color: $lime
  text-decoration: none

.zooniverse-top-bar
  position: fixed

.spine.stack > *
  display: none

  &.active,
  > nav,
  > hr
    display: block

  > nav
    a,
    button
      border-radius: 2em
      color: inherit
      display: inline-block
      font-size: 12px
      font-weight: bold
      padding: 3px 15px

      &.active
        background: rgba(#000, 0.25)
        box-shadow:
          0 1px 1px rgba(#000, 0.5) inset,
          0 1px 0 rgba(#fff, 0.1)
        text-shadow: 0 1px 0 #000
