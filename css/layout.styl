html
  background: $dark-gray
  color: #f3f3f3
  font: 14px $sans-serif
  transition: background-color 1s ease-in-out

body
  margin: 0

  > .stack
    margin: 0 auto
    position: relative
    width: 1024px
    z-index: 1

    > *
      padding: 50px 25px

    h1
      color: $light-gray
      font: 24px $serif
      text-shadow: 0 1px 1px #000

a
  color: $lime
  text-decoration: none

.spine.stack > *
  display: none

  &.active
    display: block

  > nav
    display: block

    a,
    button
      border-radius: 2em
      color: inherit
      display: inline-block
      font-size: 12px
      font-weight: bold
      padding: 3px 20px
      margin-left: -20px
      margin-right: 20px

      &.active
        background: rgba(#000, 0.25)
        box-shadow:
          0 1px 1px rgba(#000, 0.5) inset,
          0 1px 0 rgba(#fff, 0.1)
        text-shadow: 0 1px 0 #000

.zooniverse-top-bar
  position: fixed

.content-block
  clearfix()

  .detail
    float: left
    margin-right: 5%
    text-align: center
    width: 15%

    i
      color: $lime
      font-size: 96px

  .general
    float: left
    margin-right: 5%
    width: 50%

  .status
    float: left
    text-align: center
    width: 25%

    .icon
      color: $light-gray
      float: left
      text-align: center
      width: 25%

      i
        color: $lime
        font-size: 50px
