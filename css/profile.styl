body > .stack > .profile
  > nav
    background: rgba(#000, 0.25)
    border-radius: 2em
    box-shadow:
      0 1px 2px rgba(#000, 0.5) inset,
      0 1px 0 rgba(#fff, 0.1)
    display: inline-block
    font-size: 12px
    font-weight: bold
    letter-spacing: 1px
    text-transform: uppercase
    text-shadow: 0 1px 1px #000
    overflow: hidden

    button
      float: left
      padding: 0 10px

      &:first-child
        padding-left: 20px

      &:last-child
        padding-right: 20px

      &.active
        background: rgba(#000, 0.25)

  .recents,
  .favorites
    display: none

    .items
      overflow: hidden

      .item
        float: left
        width: 20%

        a
          border: 2px solid transparent
          display: block

          &:hover
            border-color: lime

          img
            display: block
            max-width: 100%

    .controls
      font-size: 12px
      font-weight: bold
      text-align: center

      button
        padding: 0 3px

        &.active
          color: $lime

  &.signed-in
    .sign-in-form
      display: none

    .recents,
    .favorites
      &.active
        display: block
