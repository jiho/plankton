body > .stack > .science
  box-sizing: border-box
  padding-left: 300px
  // padding-top: 30px

  > nav
    border-right: 1px solid #fff
    left: 20px
    padding: 20px 0
    position: absolute
    top: 50px
    width: 200px

    a
      border-right: 0 solid #fff
      color: inherit
      display: block
      font-size: 12px
      font-weight: bold
      padding: 5px 0 5px 10px
      transition: border 0.25s ease-in-out

      &.active
        border-right-width: 5px
