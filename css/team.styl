body > .stack > .team
  overflow: hidden

  .team
    clear: left
    overflow: hidden

  .member
    box-sizing: border-box
    float: left
    margin: 20px 0 40px
    padding: 0 50px 5px 0
    position: relative
    width: 25%

    &:after
      background: $red
      height: 5px
      content: ""
      left: 0
      position: absolute
      top: 100%
      width: 80px

    img
      margin-bottom: 5px

    .name
      font-size: 20px

    .role
      font-size: 10px
      font-weight: 600
      text-transform: uppercase

    .description
      font-size: 10px
